<!DOCTYPE html>
<html>
  <head>
    <title>ShareVideo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Funny Videos', root_path, class: 'navbar-brand' %>
        </div>
        <ul class="nav navbar-nav">
         <li><%= link_to 'Videos', root_path %></li>
        <% if user_signed_in? %>
            Logado como: <strong><%= current_user.email %></strong>.
            <li><%= link_to 'Share Videos', new_video_path %></li>
            <li><%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'%></li>
          <% else %>
            <li>  <%= link_to "Registrar-se", new_user_registration_path, :class => 'navbar-link'  %></li>
            <li> <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>           
          <% end %>
        </ul>
      </div>
    </div>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
