<div  class=" container">
  <div  class="col-md-offset-3 col-md-6 thumbnail">
    <h1 align="center">Share video</h1>
    <div class="col-md-12">
      <%= form_for @video do |f| %>
        <%= render 'shared/errors', object: @video %>
        <div class="col-md-12">
          <div class="form-group">
            <label>YouTube Url: </label>
            <%= f.text_field :link, class: 'form-control', required: true %>
          </div>
        </div>
        <div class="col-md-offset-4 col-md-2">
          <%= f.submit "Share videos", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>